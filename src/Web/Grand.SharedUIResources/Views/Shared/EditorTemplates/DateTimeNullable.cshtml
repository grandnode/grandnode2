@model DateTime?
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model.HasValue ? Model.Value : "")"/>
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDateTimePicker({
            culture: "@CultureInfo.CurrentCulture.Name"
        });
    });
</script>