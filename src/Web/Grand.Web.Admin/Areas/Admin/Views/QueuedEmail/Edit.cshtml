@model QueuedEmailModel
@{
    //page title
    ViewBag.Title = Loc["Admin.System.QueuedEmails.EditQueuedEmailDetails"];
}
<form asp-area="@Constants.AreaAdmin" asp-controller="QueuedEmail" asp-action="Edit" method="post">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-envelope"></i>
                        @Loc["Admin.System.QueuedEmails.EditQueuedEmailDetails"]
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Admin.System.QueuedEmails.BackToList"], "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <input type="submit" name="requeue" asp-action="Requeue" class="btn blue" value="@Loc["Admin.System.QueuedEmails.Requeue"]" />
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"] </button>
                            <span id="queuedEmail-delete" class="btn red"><i class="fa fa-trash-o"></i> @Loc["Admin.Common.Delete"]</span>
                            <vc:admin-widget widget-zone="queued_email_details_buttons" additional-data="Model" />
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                   <partial name="_CreateOrUpdate" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>
<admin-delete-confirmation button-id="queuedEmail-delete"/>