                    <admin-input asp-for="BlogSettings.ShowBlogPostsInSearchAutoComplete" />
                    <div class="control__indicator"></div>
                </label>
                <span asp-validation-for="BlogSettings.ShowBlogPostsInSearchAutoComplete"></span>
