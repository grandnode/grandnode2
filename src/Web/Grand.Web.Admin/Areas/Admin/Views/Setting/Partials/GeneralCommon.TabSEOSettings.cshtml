@model GeneralCommonSettingsModel
    <script>
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.SeoSettings.ConvertNonWesternChars)").click(toggleSeoCharField);

        toggleSeoCharField();
    });

    function toggleSeoCharField() {
        if ($('#@Html.IdFor(model => model.SeoSettings.ConvertNonWesternChars)').is(':checked')) {
            $('#SeoCharConversion').show();
        }
        else {
            $('#SeoCharConversion').hide();
        }
    }
    </script>
<div class="form-horizontal">
    <div class="form-body">
        <div class="form-group">
            <div class="col-8 col-md-4 col-sm-4 text-right">
                <admin-label asp-for="SeoSettings.CustomHeadTags" class="control-label" />
            </div>
            <div class="col-4 col-md-8 col-sm-8">
                <admin-input asp-for="SeoSettings.CustomHeadTags" />
                <span asp-validation-for="SeoSettings.CustomHeadTags"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-8 col-md-4 col-sm-4 text-right">
                <admin-label asp-for="SeoSettings.PageTitleSeparator" class="control-label" />
            </div>
            <div class="col-4 col-md-8 col-sm-8">
                <admin-input asp-for="SeoSettings.PageTitleSeparator" />
                <span asp-validation-for="SeoSettings.PageTitleSeparator"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-8 col-md-4 col-sm-4 text-right">
                <admin-label asp-for="SeoSettings.PageTitleSeoAdjustment" class="control-label" />
            </div>
            <div class="col-4 col-md-8 col-sm-8">
                <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                    <admin-input asp-for="SeoSettings.PageTitleSeoAdjustment" />
                    <div class="control__indicator"></div>
                </label>
                <span asp-validation-for="SeoSettings.PageTitleSeoAdjustment"></span>
            </div>
        </div>
