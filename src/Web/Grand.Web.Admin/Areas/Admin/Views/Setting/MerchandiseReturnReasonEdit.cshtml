@model MerchandiseReturnReasonModel
@{
    //page title
    ViewBag.Title = Loc["Admin.Settings.Order.MerchandiseReturnReasons.EditDetails"];
}
<form asp-area="@Constants.AreaAdmin" asp-controller="Setting" asp-action="MerchandiseReturnReasonEdit" method="post">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-list-alt"></i>
                        @Loc["Admin.Settings.Order.MerchandiseReturnReasons.EditDetails"] - @Model.Name
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Admin.Settings.Order.MerchandiseReturnReasons.BackToList"], "MerchandiseReturnReasonList")</small>
                    </div>
                    <div class="actions">
