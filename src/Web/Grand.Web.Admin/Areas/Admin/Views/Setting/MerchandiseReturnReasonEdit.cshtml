                        </div>
                    </div>
                    </div>
                <div class="x_content form">
                   <partial name="_CreateOrUpdate.MerchandiseReturnReason" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>
<admin-delete-confirmation button-id="merchandisereturnreason-delete" action-name="MerchandiseReturnReasonDelete" />
