    ViewBag.Title = Loc["Admin.Settings.Order.MerchandiseReturnReasons.AddNew"];
}
<form asp-area="@Constants.AreaAdmin" asp-controller="Setting" asp-action="MerchandiseReturnReasonCreate" method="post">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-list-alt"></i>
                        @Loc["Admin.Settings.Order.MerchandiseReturnReasons.AddNew"]
