@model PaymentSettingsModel
@{
    //page title
    ViewBag.Title = Loc["Admin.Configuration.Payment.Settings"];
}
<form asp-area="@Constants.AreaAdmin" asp-controller="Payment" asp-action="Settings" method="post">
    
    <div asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-fw fa-sliders"></i>
                        @Loc["Admin.Configuration.Payment.Settings"]
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                        </div>
                    </div>
                    <vc:admin-widget widget-zone="payment_settings_buttons" additional-data="null" />
                </div>
                <div class="x_content">
                    <div class="form-horizontal">
                        <div class="form-body">
                            @await Component.InvokeAsync("StoreScope")
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                    <vc:admin-widget widget-zone="payment_settings_top" additional-data="null" />
                    <div class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="col-8 col-md-4 col-sm-4 text-right">
                                    <admin-label asp-for="AllowRePostingPayments" class="control-label" />
                                </div>
                                <div class="col-4 col-md-8 col-sm-8">
                                    <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                                        <admin-input asp-for="AllowRePostingPayments" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span asp-validation-for="AllowRePostingPayments"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-8 col-md-4 col-sm-4 text-right">
                                    <admin-label asp-for="SkipPaymentIfOnlyOne" class="control-label" />
                                </div>
                                <div class="col-4 col-md-8 col-sm-8">
                                    <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                                        <admin-input asp-for="SkipPaymentIfOnlyOne" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span asp-validation-for="SkipPaymentIfOnlyOne"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-8 col-md-4 col-sm-4 text-right">
                                    <admin-label asp-for="ShowPaymentIfCartIsZero" class="control-label" />
                                </div>
                                <div class="col-4 col-md-8 col-sm-8">
                                    <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                                        <admin-input asp-for="ShowPaymentIfCartIsZero" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span asp-validation-for="ShowPaymentIfCartIsZero"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-8 col-md-4 col-sm-4 text-right">
                                    <admin-label asp-for="ShowPaymentDescriptions" class="control-label" />
                                </div>
                                <div class="col-4 col-md-8 col-sm-8">
                                    <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                                        <admin-input asp-for="ShowPaymentDescriptions" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span asp-validation-for="ShowPaymentDescriptions"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-8 col-md-4 col-sm-4 text-right">
                                    <admin-label asp-for="SkipPaymentInfo" class="control-label" />
                                </div>
                                <div class="col-4 col-md-8 col-sm-8">
                                    <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                                        <admin-input asp-for="SkipPaymentInfo" />
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span asp-validation-for="SkipPaymentInfo"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <vc:admin-widget widget-zone="payment_settings_bottom" additional-data="null" />
                </div>
            </div>
        </div>
    </div>
</form>