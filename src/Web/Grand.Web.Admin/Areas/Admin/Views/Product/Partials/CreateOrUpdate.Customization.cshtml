@model ProductModel
@inject AdminAreaSettings adminAreaSettings
<vc:admin-widget widget-zone="product_details_customization_top" additional-data="Model" />
<div class="form-horizontal portlet bg-inverse form-fit" id="group-prices">
    <div class="form-body">
        <div class="form-group">
            <div class="col-md-3 col-sm-3 text-right">
                <admin-label asp-for="CustomizedProductEnable" class="control-label" />
            </div>
            <div class="col-md-9 col-sm-9">
                <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                    <admin-input asp-for="CustomizedProductEnable" />
                    <div class="control__indicator"></div>
                </label>
                <span asp-validation-for="CustomizedProductEnable"></span>
            </div>
        </div>
        <partial name="Partials/CreateOrUpdate.CustomizeProducts" model="Model" />

    </div>
</div>

<vc:admin-widget widget-zone="product_details_customization_bottom" additional-data="Model" />