@model CustomerTagModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<admin-tabstrip name="customertag-edit">
    <items>
        <tabstrip-item text="@Loc["Admin.Customers.CustomerTags.Info"]" tab-index="0">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Customers.CustomerTags.Products"]" tab-index="1">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.TabProducts" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Customers.CustomerTags.Customers"]" tab-index="2">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.TabCustomers" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <vc:admin-widget widget-zone="customer_tag_details_tabs" additional-data="Model" />
    </items>
</admin-tabstrip>
