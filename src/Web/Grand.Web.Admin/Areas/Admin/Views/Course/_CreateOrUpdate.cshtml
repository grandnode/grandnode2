@model CourseModel
<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<input id="active-menu-item" type="hidden" value="/@Constants.AreaAdmin/Course/List" />
<admin-tabstrip name="category-edit">
    <items>
        <tabstrip-item text="@Loc["Admin.Courses.Course.Info"]" tab-index="0">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Common.SEO"]" tab-index="1">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabSeo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Courses.Course.Subjects"]" tab-index="2">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.Subject" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Courses.Course.Lessons"]" tab-index="3">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.Lesson" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Common.UserFields.Tab"]" tab-index="4">
            <content>
                <div>
                    @{
                        ViewData["ObjectType"] = "Course";
                        ViewData["TabIndex"] = 4;
                     }
                    <partial name="_UserFields" model="Model" view-data="ViewData" />
                </div>
            </content>
        </tabstrip-item>
        <vc:admin-widget widget-zone="course_details_tabs" additional-data="Model" />
    </items>
</admin-tabstrip>
<input id="active-menu-item" type="hidden" value="/@Constants.AreaAdmin/Course/List" />