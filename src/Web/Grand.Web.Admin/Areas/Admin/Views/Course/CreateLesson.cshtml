@model CourseLessonModel
@{
    //page title
    ViewBag.Title = Loc["Admin.Courses.Course.Lesson.AddNew"];
}
<form asp-area="@Constants.AreaAdmin" asp-controller="Course" asp-action="CreateLesson" method="post" id="course-lesson-form">
    <input asp-for="CourseId" type="hidden" />
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-sitemap"></i>
                        @Loc["Admin.Courses.Course.Lesson.AddNew"]
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Admin.Courses.Course.BackToCourse"], "Edit", "Course", new { Id = Model.CourseId })</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided util-btn-margin-bottom-5">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"] </button>
                        </div>
                    </div>
                </div>
                <vc:admin-widget widget-zone="course_lesson_details_buttons" additional-data="null" />
                <div class="x_content form">
                    <partial name="Partials/Lesson" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>