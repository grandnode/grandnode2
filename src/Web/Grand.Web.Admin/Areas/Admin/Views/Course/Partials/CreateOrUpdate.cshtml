@model CourseModel
<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden"/>
<input id="active-menu-item" type="hidden" value="/@Constants.AreaAdmin/Course/List"/>
<admin-tabstrip name="category-edit">
    <items>
        <tabstrip-item text="@Loc["Admin.Courses.Course.Info"]" tab-index="0">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.TabInfo" model="Model"/>
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Common.SEO"]" tab-index="1">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.TabSeo" model="Model"/>
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Courses.Course.Subjects"]" tab-index="2">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.Subject" model="Model"/>
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Courses.Course.Lessons"]" tab-index="3">
            <content>
                <div>
                    <partial name="Partials/CreateOrUpdate.Lesson" model="Model"/>
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@Loc["Admin.Common.UserFields.Tab"]" tab-index="4">
            <content>
                <div>
                    <partial name="Partials/UserFields" model="Model"/>
                </div>
            </content>
        </tabstrip-item>
        <vc:admin-widget widget-zone="course_details_tabs" additional-data="Model"/>
    </items>
</admin-tabstrip>