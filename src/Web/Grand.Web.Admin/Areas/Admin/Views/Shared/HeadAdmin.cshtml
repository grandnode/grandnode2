@using Grand.Infrastructure;
@inject Grand.Domain.Localization.LanguageSettings languageSettings
@inject IWorkContext workContext
@{
    var supportRtl = workContext.WorkingLanguage.Rtl &&
         !languageSettings.IgnoreRtlPropertyForAdminArea;
    var kendoVersion = "2019.2.514";

    <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/bootstrap/css/daterangepicker.min.css" />
    <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/build/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/simple-line-icons/simple-line-icons.min.css" />
    <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/summernote/summernote.min.css" />
    <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/jquery-ui-themes/smoothness/jquery-ui-1.10.3.custom.min.css" />
    <link rel="stylesheet" type="text/css" href="@string.Format("/_content/Grand.Web.Admin/administration/kendo/styles/{0}/kendo.material.mobile.min.css", kendoVersion)" />
    <link rel="stylesheet" type="text/css" href="@string.Format("/_content/Grand.Web.Admin/administration/kendo/styles/{0}/kendo.material.min.css", kendoVersion)" />
    <link rel="stylesheet" type="text/css" href="@string.Format("/_content/Grand.Web.Admin/administration/kendo/styles/{0}/kendo.common-material.min.css", kendoVersion)" />


    //CSS
    if (supportRtl)
    {
        <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/bootstrap/css/bootstrap-rtl.min.css" />
        <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/build/css/custom-rtl.css" />
        <link rel="stylesheet" type="text/css" href="@string.Format("/_content/Grand.Web.Admin/administration/kendo/styles/{0}/kendo.rtl.min.css", kendoVersion))" />
    }
    else
    {
        <link rel="stylesheet" type="text/css" href="/_content/Grand.Web.Admin/administration/build/css/custom.css" />
    }

    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/build/js/jquery.min.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/build/js/moment.min.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/bootstrap/js/daterangepicker.min.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/typeahead.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/admin.search.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/jquery.validate.min.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/jquery.validate.unobtrusive.min.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script asp-location="Head" asp-src="/_content/Grand.Web.Admin/administration/admin.common.js"></script>
    <script asp-location="Head" asp-src="@string.Format("/_content/Grand.Web.Admin/administration/kendo/scripts/{0}/kendo.ui.core.min.js", kendoVersion)"></script>
    <script asp-location="Head" asp-src="@string.Format("/_content/Grand.Web.Admin/administration/kendo/scripts/{0}/kendo.grid.js", kendoVersion)"></script>
    <script asp-location="Head" asp-src="@string.Format("/_content/Grand.Web.Admin/administration/kendo/scripts/{0}/cultures/kendo.culture.{1}.min.js", kendoVersion, "en-US" )"></script>


    <script asp-location="Footer" asp-src="/_content/Grand.Web.Admin/administration/bootstrap/js/popper.min.js"></script>
    <script asp-location="Footer" asp-src="/_content/Grand.Web.Admin/administration/bootstrap/js/bootstrap.min.js"></script>
    <script asp-location="Footer" asp-src="/_content/Grand.Web.Admin/administration/build/js/smartresize.js"></script>
    <script asp-location="Footer" asp-src="/_content/Grand.Web.Admin/administration/build/js/custom.js"></script>
    <script asp-location="Footer" asp-src="/_content/Grand.Web.Admin/administration/summernote/summernote.min.js"></script>

}