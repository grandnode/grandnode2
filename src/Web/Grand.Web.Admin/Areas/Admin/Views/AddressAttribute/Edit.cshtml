@model AddressAttributeModel
@{
    //page title
    ViewBag.Title = Loc["Admin.Address.AddressAttributes.EditAttributeDetails"];
}

<form asp-area="@Constants.AreaAdmin" asp-controller="AddressAttribute" asp-action="Edit" method="post" id="addressattribute-form">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-list-ol"></i>
                        @Loc["Admin.Address.AddressAttributes.EditAttributeDetails"] - @Model.Name
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Admin.Address.AddressAttributes.BackToList"], "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"] </button>
                            <span id="addressattribute-delete" class="btn red"><i class="fa fa-trash-o"></i> @Loc["Admin.Common.Delete"]</span>
                        </div>
                    </div>
                </div>
                <vc:admin-widget widget-zone="address_attribute_details_buttons" additional-data="Model" />
                <div class="x_content form">
                    <partial name="Partials/CreateOrUpdate" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>

<admin-delete-confirmation button-id="addressattribute-delete"/>