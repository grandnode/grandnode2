@inject IPageHeadBuilder pagebuilder
@{
    Layout = Constants.LayoutVendorLogin;
    //title
    pagebuilder.AddTitleParts(Loc["Vendor.Login.TwoFactor"]);
}
<form asp-action="TwoFactorAuthorization" asp-controller="Login" asp-area="@Constants.AreaVendor" method="post">
    <div class="card col-xl-6 col-lg-8 col-md-10 col-12">
        <h5 class="card-header">
            <strong>@Loc["Vendor.Login.TwoFactor.EnterCode"]</strong>
        </h5>
        <div class="card-body">
            <div class="row">
                <div asp-validation-summary="All" class="col-12 justify-content-around text-danger"></div>
                <div class="col-12 form-group mb-0 d-flex justify-content-around">
                    <div class="form-group row">
                        <div class="col-lg-3 col-12 d-flex align-items-start justify-content-sm-start">
                            <label name="token" class="h5 m-0">@Loc["Vendor.Login.TwoFactor.DigitCode"]</label>
                        </div>
                        <div class="col-lg-9 col-12">
                            <input name="token" type="text" class="form-control" autofocus/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="buttons">
                <input class="btn btn-info login-button px-5" type="submit" value="@Loc["Vendor.Login.TwoFactor.SendCode"]"/>
            </div>
        </div>
    </div>
</form>