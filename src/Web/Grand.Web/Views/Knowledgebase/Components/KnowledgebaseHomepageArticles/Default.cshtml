@model KnowledgebaseHomePageModel

@if (Model.Items.Any())
{
    <div class="viewBox listbox">
        <ul class="list pl-0">
            @foreach (var item in Model.Items)
            {
                if (item.IsArticle)
                {
                    <a class="list-group-item" href="@Url.RouteUrl("KnowledgebaseArticle", new { item.SeName })">
                        @item.Name
                    </a>
                }
            }
        </ul>
    </div>
}
