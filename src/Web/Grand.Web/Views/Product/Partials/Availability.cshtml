@model ProductDetailsModel
<div class="availability generalMarginSupporter">
    @if (!string.IsNullOrWhiteSpace(Model.StockAvailability))
    {
        <div class="stock">
            <span class="label">@Loc["Products.Availability"]:</span>
            <span class="value" id="stock-availability-value-@Model.Id">
                <link itemprop="availability" href="http://schema.org/InStock" />
                @Model.StockAvailability
            </span>
        </div>
    }
    @if (Model.DisplayOutOfStockSubscription)
    {
        <partial name="Partials/OutOfStockSubscription" model="Model" />
    }
</div>
