@model IList<ProductTagModel>
<div class="product-tags-box col-12 px-0">
    <div class="product-tags-list">
        @for (var i = 0; i < Model.Count; i++)
        {
            <a class="btn btn-light producttag" href="@Url.RouteUrl("ProductsByTagName", new { Model[i].SeName })">
                @Model[i].Name <span>@Loc["Products.Tags.Count", Model[i].ProductCount]</span>
            </a>
        }
    </div>
</div>
