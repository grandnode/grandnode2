@model IList<CollectionModel>
<div class="collections generalMarginSupporter">
    @if (Model.Count == 1)
    {
        <span class="label">@Loc["Products.Collection"]:</span>
    }
    else
    {
        <strong class="label">@Loc["Products.Collections"]:</strong>
    }
    <span class="value">
        @for (var i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Collection", new { item.SeName })">@item.Name</a>
            if (i != Model.Count - 1)
            {
                <span class="separator">,</span>
            }
        }
    </span>
</div>
