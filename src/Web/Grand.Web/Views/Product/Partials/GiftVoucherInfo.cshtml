@model ProductDetailsModel
<div class="giftvoucher generalMarginSupporter">
    <fieldset>
        <legend class="sr-only">@Loc["Products.GiftVoucher.RecipientName"]</legend>
        <label for=@($"RecipientName_{Model.Id}") class="col-form-label">@Loc["Products.GiftVoucher.RecipientName"]:</label>
        <input type="text" id=@($"RecipientName_{Model.Id}") name="RecipientName" value="@Model.GiftVoucher.RecipientName" class="form-control recipient-name" />
    </fieldset>
    @if (Model.GiftVoucher.GiftVoucherType == GiftVoucherType.Virtual)
    {
        <fieldset>
            <legend class="sr-only">@Loc["Products.GiftVoucher.RecipientEmail"]</legend>
            <label for=@($"RecipientEmail_{Model.Id}") class="col-form-label">@Loc["Products.GiftVoucher.RecipientEmail"]:</label>
            <input type="email" id=@($"RecipientEmail_{Model.Id}") name="RecipientEmail" value="@Model.GiftVoucher.RecipientEmail" class="form-control recipient-email" />
        </fieldset>
    }
    <fieldset>
        <legend class="sr-only">@Loc["Products.GiftVoucher.SenderName"]</legend>
        <label for=@($"SenderName_{Model.Id}") class="col-form-label">@Loc["Products.GiftVoucher.SenderName"]:</label>
        <input type="text" id=@($"SenderName_{Model.Id}") name="SenderName" value="@Model.GiftVoucher.SenderName" class="form-control sender-name" />
    </fieldset>
    @if (Model.GiftVoucher.GiftVoucherType == GiftVoucherType.Virtual)
    {
        <fieldset>
            <legend class="sr-only">@Loc["Products.GiftVoucher.SenderEmail"]</legend>
            <label for=@($"SenderEmail_{Model.Id}") class="col-form-label">@Loc["Products.GiftVoucher.SenderEmail"]:</label>
            <input type="email" id=@($"SenderEmail_{Model.Id}") name="SenderEmail" value="@Model.GiftVoucher.SenderEmail" class="form-control sender-email" />
        </fieldset>
    }
    <fieldset>
        <legend class="sr-only">@Loc["Products.GiftVoucher.Message"]</legend>
        <label for=@($"Message_{Model.Id}") class="col-form-label">@Loc["Products.GiftVoucher.Message"]:</label>
        <textarea id=@($"Message_{Model.Id}") name="Message" value="@Model.GiftVoucher.Message" class="form-control message"></textarea>
    </fieldset>
</div>
