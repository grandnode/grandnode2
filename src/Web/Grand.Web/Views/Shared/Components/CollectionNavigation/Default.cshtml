@model CollectionNavigationModel
<div id="block-collection-navigation" class="block block-collection-navigation">    
    <h2 class="h5 d-block"><strong>@Loc["Collections"]</strong>
        </h2>
    <div class="viewBox">
        <ul>
            @foreach (var collection in Model.Collections)
            {
                <li class="@(collection.IsActive ? "active" : "inactive")">
                    <a href="@Url.RouteUrl("Collection", new { collection.SeName })">
                        @if (!string.IsNullOrEmpty(collection.Icon))
                        {
                            <span class="category-icon @collection.Icon"></span>
                        }
                        @collection.Name
                    </a>
                </li>
            }
        </ul>
        @if (Model.TotalCollections > Model.Collections.Count)
        {
            <div class="view-all mb-1">
                <a class="btn btn-sm btn-outline-info" href="@Url.RouteUrl("CollectionList")">@Loc["Collections.ViewAll"]</a>
            </div>
        }
    </div>
</div>
