@model IList<ProductOverviewModel>
@inject DisplayOrderHomePage order
<div class="product-grid personalized-product-grid order-@order.PersonalizedProducts">
    <h2 class="generalTitle text-center">@Loc["HomePage.Personalized.Products"]</h2>
    <div class="col-12 px-0">
        <div class="form-row">
            @foreach (var item in Model)
            {
                <div class="col-xl-@order.Pp_Xl col-lg-@order.Pp_Lg col-md-@order.Pp_Md col-sm-@order.Pp_Sm col-@order.Pp_Col product-container mb-2">
                    <partial name="_CatalogProductView" model="item" />
                </div>
            }
        </div>
    </div>
</div>