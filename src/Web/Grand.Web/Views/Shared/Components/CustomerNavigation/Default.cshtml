                                                                     {<text>inactive</text>}"><b-icon icon="person-plus"></b-icon> <span>@Loc["Account.SubAccounts"]</span></a>
                                                                </li>
                                                            }
        @await Component.InvokeAsync("Widget", new { widgetZone = "account_navigation_after", additionalData = Model })
    </ul>
</div>
