@model IList<ProductOverviewModel>
@inject DisplayOrderHomePage order
<div class="product-grid recommended-product-grid order-@order.RecommendedProducts">
    <h2 class="generalTitle text-center">@Loc["HomePage.Recommended.Products"]</h2>
    <div class="col-12 px-0">
        <div class="form-row">
            @foreach (var item in Model)
            {
                <div class="col-xl-@order.Rp_Xl col-lg-@order.Rp_Lg col-md-@order.Rp_Md col-sm-@order.Rp_Sm col-@order.Rp_Col product-container mb-2">
                    <partial name="Partials/CatalogProductView" model="item" />
                </div>
            }
        </div>
    </div>
</div>