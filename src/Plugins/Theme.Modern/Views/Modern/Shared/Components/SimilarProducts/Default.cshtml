@model IList<ProductOverviewModel>
@if (Model.Any())
{
    <b-col cols="12" class="similar-products-grid product-grid px-0">
        <h2 class="h3 generalTitle text-center">@Loc["Products.SimilarProducts"]</h2>
        <b-form-row>
            @foreach (var item in Model)
            {
                <b-col xl="3" lg="4" md="4" sm="6" cols="6" class="product-container col-for-5-xl px-0 mb-2">
                    <partial name="Partials/CatalogProductView" model="item"/>
                </b-col>
            }
        </b-form-row>
    </b-col>
}