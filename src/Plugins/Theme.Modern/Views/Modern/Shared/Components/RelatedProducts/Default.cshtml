@model IList<ProductOverviewModel>
@if (Model.Any())
{
    <b-col cols="12" class="related-products-grid  product-grid my-3 px-0">
        <h2 class="h3 generalTitle mb-3">
            <span>@Loc["Products.RelatedProducts"]</span>
        </h2>
        <b-form-row>
            @foreach (var item in Model)
            {
                <b-col xl="3" lg="4" md="4" sm="3" cols="6" class="product-container px-0 mb-2">
                    <partial name="Partials/CatalogProductView" model="item"/>
                </b-col>
            }
        </b-form-row>
    </b-col>
}