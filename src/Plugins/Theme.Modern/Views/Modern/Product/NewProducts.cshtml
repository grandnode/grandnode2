@model IList<ProductOverviewModel>
@inject IPageHeadBuilder pagebuilder
@{
    Layout = "_SingleColumn";

    //title
    pagebuilder.AddTitleParts(Loc["Title.NewProducts"]);
}
<div class="page recently-added-products-page col-12 px-0">
    <h1 class="h2 generalTitle text-center">
        <div>@Loc["Products.NewProducts"]</div>
    </h1>
    @if (Model.Any())
    {
        <div class="item-row">
            @foreach (var product in Model)
            {
                <b-col xl="3" lg="3" sm="6" cols="6" class="product-container mb-2">
                    <partial name="Partials/CatalogProductView" model="product"/>
                </b-col>
            }
        </div>
    }
</div>