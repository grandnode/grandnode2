@model IList<BlogPostCategoryModel>
@if (Model.Any())
{
    <section id="block-blog-archive" class="block block-blog-archive">
        <h2 class="h5"><strong>@Loc["Blog.Category"]</strong></h2>
        <div class="viewBox">
            <ul class="list">
                @foreach (var category in Model)
                {
                    <li>
                        <a href="@Url.RouteUrl("BlogByCategory", new { categorySeName = category.SeName })">
                            @category.Name 
                            (@(category.BlogPostCount))
                        </a>
                    </li>
                }
            </ul>
        </div>
    </section>
}